<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.codeqi.bean.task.taskMapper">
    <!-- 增【G】 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="tid">
		insert into
		task (p_id,s_id,task_name,remarks,create_time,state,begin_time,end_time)
		values (#{p_id},#{s_id},#{task_name},#{remarks},#{create_time},#{state},#{begin_time},#{end_time})
	</insert>

    <!-- 删 -->
    <delete id="delete">
		delete from task where tid = #{tid}
	</delete>

    <!-- 改【G】 -->
    <update id="update">
		update task set
		p_id = #{p_id},
		s_id = #{s_id},
		task_name = #{task_name},
		remarks = #{remarks},
		create_time = #{create_time},
		state = #{state},
		begin_time = #{begin_time},
		end_time = #{end_time}
		where tid = #{tid}
	</update>


    <!-- ================================== 查询相关 ================================== -->
