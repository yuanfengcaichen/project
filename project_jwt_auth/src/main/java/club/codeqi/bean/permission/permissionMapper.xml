    <!-- 公共查询sql片段 -->
    <sql id="select_sql">
		select *
		from permission
	</sql>


    <!-- 查 -->
    <select id="selectByid" resultMap="model">
        <include refid="select_sql"></include>
        where perid = #{perid}
    </select>

    <!-- 查询，根据条件(参数为null或0时默认忽略此条件)【G】 -->
