<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.codeqi.bean.file.fileMapper">
    <!-- 增【G】 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="fid">
		insert into
		file (p_id,s_id,t_id,m_id,oldname,filepath,create_time)
		values (#{p_id},#{s_id},#{t_id},#{m_id},#{oldname},#{filepath},#{create_time})
	</insert>

    <!-- 删 -->
    <delete id="delete">
		delete from file where fid = #{fid}
	</delete>

    <!-- 改【G】 -->
    <update id="update">
		update file set
		p_id = #{p_id},
		s_id = #{s_id},
		t_id = #{t_id},
		m_id = #{m_id},
		oldname = #{oldname},
		filepath = #{filepath},
		create_time = #{create_time}
		where fid = #{fid}
	</update>


    <!-- ================================== 查询相关 ================================== -->
